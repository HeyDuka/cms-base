<h1>{{quoteString=\{\{id\}\};alternate=true;defaultValue=\{\{writeString=new_entry\}\}}}</h1>
<form action="{{action}}" method="post">
<fieldset><legend>{{writeString=language}} [id:{{id}}]</legend>
  <label for="id">Id</label>
  <input type="text" id="id" name="id" value="{{id}}" /><br /> {{writeFlashValue=language_id_required}}
  <label for="sort">Sortierung</label>
  <input type="text" id="sort" name="sort" value="{{sort}}" size="2" /><br />
  <label for="is_active">{{writeString=is_active}}</label>
  <input type="checkbox" name="is_active" id="is_active" value="1" {{is_active}}/><br />
</fieldset>
<fieldset class="divider nolegend">
  <label>{{writeString=save}}</label><button type="submit"></button>
</fieldset>
</form>
  {{identifierContext=start;name=delete_button}}<fieldset class="divider">
    {{delete_button}}
  </fieldset>{{identifierContext=end;name=delete_button}}

