jQuery(document).ready(function() {
	var document_category_list = AdminInterface.content.find('.document_category_list').getWidget();
	var info_bar = AdminInterface.info_bar.getWidget();
	info_bar.add_button('add-new-item', function() {
		Widget.create('document_category_detail', function(widget) {
			widget.open();
			widget.save_callback = function() {
				jQuery('.document_category_list.ui-list').each(function() {
					jQuery(this).getWidget().reload();
				});
			};
		});
	}, 'n', true);
	
	info_bar.add_row_count_info_for_list(document_category_list);
});