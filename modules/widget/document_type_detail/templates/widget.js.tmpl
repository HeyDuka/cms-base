Widget.types.document_type_detail = {
	initialize: function() {
		this.content = jQuery("{{includeTemplate=edit}}");
		Widget.create('detail', function(widget) {
			this.detail_widget = widget;
			jQuery.extend(widget.settings, {
				title: "{{writeString=document_type.create}}",
				width: 480,
				save_callback: this.save.bind(this)
			});
			widget.content = this.content;
			if(this.auto_open) {
				this.open();
			}
		}.bind(this));
	},

	open: function() {
		if(!this.detail_widget) {
			this.auto_open = true;
			return false;
		}
		this.detail_widget.open();
		this.detail_widget.content.find('input[name=extension]').focus();
	},
	
	fill_data: function() {
		this.getTypeData(function(type_data) {
			this.content.find("input[name='extension']").val(type_data.Extension);
			this.content.find("input[name='mimetype']").val(type_data.Mimetype);
			this.content.find("input[name='is_office_doc']").attr('checked', type_data.IsOfficeDoc);
			this.detail_widget.set_title("{{writeString=document_type}}"+" : "+(this.detail_widget.settings.title = type_data.Extension));
		});
	},
	
	save: function() {
		this.saveData(this.content.serializeArrayKV(), this.save_callback);
		return true;
	},
	
	close: function() {
		this.detail_widget.close();
		this.close_callback();
	},
	
	save_callback: jQuery.noop,
	close_callback: jQuery.noop
};