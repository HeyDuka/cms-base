Widget.types.document_category_detail = {
	initialize: function() {
		this.content = jQuery("{{includeTemplate=edit}}");
		Widget.create('detail', function(widget) {
			this.detail_widget = widget;
			jQuery.extend(widget.settings, {
				title: "{{writeString=document_category.create}}",
				width: 480,
				save_callback: this.save.bind(this)
			});
			widget.content = this.content;
			if(this.auto_open) {
				this.open();
			}
		}.bind(this));
	},
	
	open: function() {
		if(!this.detail_widget) {
			this.auto_open = true;
			return false;
		}
		this.detail_widget.open();
	},
	
	fill_data: function() {
		this.getCategoryData(function(category_data) {
			this.content.find("input[name='name']").val(category_data.Name);
			this.content.find("input[name='max_width']").val(category_data.MaxWidth);
			this.content.find("input[name='is_inactive']").attr('checked', category_data.IsInactive);
			this.content.find("input[name='is_externally_managed']").attr('checked', category_data.IsExternallyManaged);
			this.content.find("span[class='detail_id']").text(category_data.Id);
			this.detail_widget.set_title(this.detail_widget.settings.title = category_data.Name);
		});
	},
	
	save: function() {
		this.saveData(this.content.serializeArrayKV(), this.save_callback);
		return true;
	},

	close: function() {
		this.detail_widget.close();
		this.close_callback();
	},
	
	save_callback: jQuery.noop,
	close_callback: jQuery.noop
};