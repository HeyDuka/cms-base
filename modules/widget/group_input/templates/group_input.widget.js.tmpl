Widget.types.group_input = {
	prepare: function() {
		this.checkbox_prototype = jQuery('<input/>').attr('type', 'checkbox');
		this.allGroups(function(groups) {
			var fieldset = this._element.find('fieldset');
			if(groups.length === 0) {
				jQuery('<div/>').addClass('no_entries_info').html("{{writeString=wns.groups.none_available}}").appendTo(fieldset);
			}
			
			jQuery.each(groups, function(i, group) {
				var checkbox = this.checkbox_prototype.clone();
				checkbox.attr('name', 'group_ids[]').attr('value', group.id).appendTo(fieldset);
				jQuery('<label/>').attr('for', "group_ids[]").text(group.name).appendTo(fieldset);
				jQuery('<br/>').appendTo(fieldset);
			}.bind(this));
		});
	},
	
	checked_groups: function() {
		var result = [];
		this._element.find("input[name='group_ids[]']:checked").each(function() {
			result.push(this.value);
		});
		return result;
	},
	
	set_checked: function(values) {
		if(!values) {
			this._element.hide();
			return;
		} else {
			this._element.show();
		}
		value_obj = {};
		jQuery.each(values, function(i, value) {
			value_obj[value] = true;
		});
		this._element.find("input[name='group_ids[]']").each(function(i, checkbox) {
			jQuery(checkbox).attr('checked', !!value_obj[checkbox.value]);
		});
	}
};