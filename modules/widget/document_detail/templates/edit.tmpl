<form enctype="multipart/form-data">
	<label for="file_upload">{{writeString=file.upload}}</label>
	<input type="file" name="file_upload" size="48" class="ui-widget-content" /><br />
	<div class="status_section">
		<img class="preview" width="150" />
		<label>{{writeString=file.info_detail}}:</label><br /><span class="file_size status"></span><br />
		<label>{{writeString=created.info}}:</label><br /><span class="created_info status"></span><br />
		<label>{{writeString=updated.info}}:</label><br /><span class="updated_info status"></span><br />
		<label>ID:</label><span class="detail_id">{{id}}</span>
	</div>
	<label for="name">{{writeString=name}}</label>
	<input type="text" name="name" class="ui-widget-content" /><br />
	<label for="description">{{writeString=description}}</label>
	<textarea rows="2" cols="30" name="description" class="ui-widget-content"></textarea>
	<label for="document_category_id">{{writeString=document_category_id_label}}</label>
	<select name="document_category_id" class="ui-widget-content" data-widget-type="document_category_input"></select><br />
	<label for="language_id">{{writeString=label_detail.language_id}}</label>
	<select name="language_id" class="ui-widget-content" data-widget-type="language_input"></select><br />
	<label for="is_protected">{{writeString=is_protected}}</label>	
	<input type="checkbox" name="is_protected" value="1" /><br />
</form>