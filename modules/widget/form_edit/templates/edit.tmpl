	<div class="group_fields">
		<label for="request_method">{{writeString=form.request_method}}</label> <select name="request_method" class="ui-widget-content autowidth"></select>
	</div>
	<div class="group_fields">
		<label for="form_type">{{writeString=form.form_type}}</label> <select name="form_type" class="switcher_field ui-widget-content autowidth"></select>
	</div>
	<div class="conditional_field-for-form_type external group_fields">
		<label for="form_action">{{writeString=form.action}}</label> <input type="text" name="form_action" class="ui-widget-content autowidth" />
	</div>
