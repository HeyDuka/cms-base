.tag_panel {
	position: absolute;
	background-color: white;
	width: 300px;
	min-height: 200px;
	z-index: 20;
}

.tag_panel .admin_area {
	position: absolute;
	bottom: 0px;
}

.tag_panel .admin_area input {
	float: left;
	width: 200px;
}

.tag_panel .tag_area {
	margin: 1em;
}

.tag {
	white-space: nowrap;
}

.tag > * {
	height: 34px;
	display: inline-block;
	background-repeat: no-repeat;
	padding-top: 10px;
}

.tag > .tag_start {
	background-image: url("{{writeDirectInclude=admin/tag_start.png;template=location_only}}");
	width: 20px;
}

.tag > .tag_repeat {
	background-image: url("{{writeDirectInclude=admin/tag_repeat.png;template=location_only}}");
	background-repeat: repeat-x;
}

.tag > .tag_end {
	background-image: url("{{writeDirectInclude=admin/tag_end.png;template=location_only}}");
	width: 14px;
}