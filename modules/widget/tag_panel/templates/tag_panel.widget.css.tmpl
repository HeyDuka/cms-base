.tag_panel {
	position: absolute;
	background-color: white;
	width: 300px;
	min-height: 200px;
	z-index: 20;
}

.tag_panel.ui-widget-content {
	border: 1px solid #111;
	border-right: 1px solid transparent;
	background-color: #888;
}

.tag_panel .admin_area {
	position: absolute;
	bottom: 0px;
}

.tag_panel .admin_area input {
	float: left;
	margin: -1px 5px 5px;
	width: 198px;
}

.tag_panel .admin_area button.ui-state-hover {
	color: #e3ef99;
}

.tag_panel .tag_area {
	margin: 1em;
}
