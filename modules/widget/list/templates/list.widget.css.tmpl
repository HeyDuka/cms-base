*[data-widget-type=list] {
	border: none;
}

*[data-widget-type=list] .ui-state-active {
	color: white;
}

*[data-widget-type=list] .ui-state-hover {
	cursor: default;
}

tr.ui-list-headrow th.file_info, 
table.ui-list td.file_info {
	text-align: right;
	padding-right: 2em;
}

tr.ui-list-headrow th.sort, 
table.ui-list td.sort {
	text-align: right;
	padding-right: 1em;
	color: #999;
}

tr.ui-list-headrow th.sort {
	padding-right: 0em;
}

tr.ui-list-headrow th.file_info {
	padding-right: 1.0em;
}

