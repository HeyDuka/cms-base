*[data-widget-type=tree] li a.ui-state-default {
	border: none;
}

*[data-widget-type=tree] { list-style: none inside; }

*[data-widget-type=tree] li,
*[data-widget-type=tree] li a ins {
	clear: left;
	cursor: pointer;
}
*[data-widget-type=tree] li ins {
	cursor: default;
}
*[data-widget-type=tree] ul ins.jstree-custom-icon {
	position: absolute;
	right: 0;
}
*[data-widget-type=tree] ul ins.jstree-custom-icon:nth-child(2) {
	right: 30px;
}

*[data-widget-type=tree] .tree-opener { float: left; }

*[data-widget-type=tree] .tree-opener.no-children { background-image: none; }

*[data-widget-type=tree] ul li a,
*[data-widget-type=tree] ul li a.ui-state-default {
  color: #444444;
  font-weight: 700;
  text-decoration: none;
}

*[data-widget-type=tree] ul .ui-icon {
	top: 3px;
	position: relative;
}

*[data-widget-type=tree] ul li {
  font-size: 1.2em;
  padding: 0 0 0 0;
  line-height: 25px;
  vertical-align: middle;
  position: relative;
  border-bottom: none;
}

*[data-widget-type=tree] ul li li { font-size: 1em; }

*[data-widget-type=tree] ul li.show-children ol {
  margin-left: -10px;
  margin-top: 3px;
}

*[data-widget-type=tree] ul .ui-icon-folder-collapsed {
	display: none;
}

*[data-widget-type=tree] li .jstree-custom-icon {
  height: 22px;
  width: 29px;
  margin-top: 2px;
  margin-left: 5px;
}
