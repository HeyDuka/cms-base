form.page_detail select[name='template_name'] option.default {
	font-style: italic;
}

.ui-widget-content.path_input {
	font-family: Courier;
	background: url() #EBEDEF;
	font-size: 1.0em;
	margin-right: 2em;
	margin-left: 1em;
}

input.path_input.ui-widget-content:hover,
input.path_input.ui-widget-content:selected {
	background: url() #fff;
}

.page_properties_container span {
	margin-left: 1em;
}

fieldset.page_properties_container {
	margin-top: 1em;
	margin-left: 0;
	padding-left:.2em;
	border: 1px solid #DFE1E3;
	display: none;
}

fieldset.page_properties_container legend {
	margin-left: -.3em;
	padding-left: 0.3em;
}

div.container {
	background-color: #f2f2f2;
	border-bottom: #DDD 1px solid;
}

.contents_container h4 {
	margin: 0;
	padding: .2em 0;
}

.page_detail_controls {
	background: #ebedef;
	border-top: 1px solid #C1C2C4;
	bottom: 25px;
	height: 36px;
	left: 0;
	padding: 0;
	position: fixed;
	right: 0;
	text-align: right;
}
.page_detail_controls button {
	float: right;
}
.page_detail_controls button[name=save] {
	background: url("{{writeConstantValue=INT_IMAGES_DIR_FE}}/admin/button_gradient_dark.png");
}
.page_detail_controls button[name=save]:hover {
	color: #E3EF99;
}

.page_detail_controls button.ui-button.ui-state-default[name=cancel],
.page_detail_controls button.ui-button.ui-state-default[name=delete] {
	color: #666666;
	background: url("{{writeConstantValue=INT_IMAGES_DIR_FE}}/admin/button_gradient_bright.png") repeat-x 0 bottom;
	border-color: #999999;
}

body.pages #admin_main {
	border-bottom: 37px solid transparent;
}

.delete_drop_zone {
	font-size: 1.5em;
	float: left;
	height: 100%;
	margin: 23px 2px 2px 2px;
	padding: 2px;
	min-height: 200px;
	width: 100px;
}

.delete_drop_zone span {
	color: transparent;
}

.delete_drop_zone.ui-state-draggable span {
	color: #ccc;
}

.delete_drop_zone.ui-state-droppable span {
	color: #f00;
}

div.delete_drop_zone.ui-state-droppable {
	background: transparent url("{{writeConstantValue=INT_IMAGES_DIR_FE}}/admin/content_object_trash.png") no-repeat center center  !important;
	border-color: transparent !important;
}


.page_detail_controls div {
	height:100%;
	border-top: 1px solid #FFF;
	padding:0.5em 8em 0 0.5em;
}

#admin_sidebar input {
	font-size: 1.1em;
	padding:.3em .4em;
	margin-left: 1.2em
}

a.page_href {
	color: #333;
	text-decoration: underline;
}

