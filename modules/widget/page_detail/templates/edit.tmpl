<form class="page_detail">
	<div class="status_section">
	<h3 class="status">Status</h3>
		<label style="margin: 1em 1em 1em .5em">Seitenlink</label><span class="page_href" style="font-family:Courier;"></span>
		<label for="name" style="margin-left:2em;">{{writeString=name}}</label><input type="text" name="name" class="ui-widget-content path_input" /><br />
		<input type="checkbox" name="is_inactive" value="1" /><label class="for_checkbox" for="is_inactive">{{writeString=widget.page.active}}</label> 
		<input type="checkbox" name="is_folder" value="1" /><label for="is_folder" class="for_checkbox">{{writeString=widget.page.folder}}</label> 
		<input type="checkbox" name="is_hidden" value="1" /><label for="is_hidden" class="for_checkbox">{{writeString=widget.page.hidden}}</label> 
		<input type="checkbox" name="is_protected" value="1" /><label for="is_protected" class="for_checkbox">{{writeString=widget.page.protected}}</label> 
	</div>
	<div id="accordion">
    <h3><a href="#">Labels</a></h3>
    <div class="inner_wrapper">		
			<br />
			<label for="page_title">{{writeString=widget.page_title}}</label>
			<input type="text" name="page_title" class="ui-widget-content input_long" /><br />
			<label for="link_text">{{writeString=widget.page_title}}</label>
			<input type="text" name="link_text" class="ui-widget-content" /><br />
		</div>
    <h3><a href="#">Template</a></h3>
    <div class="inner_wrapper"><p>Templateauswahl</p>
		</div>
		<h3><a href="#">Inhalte</a></h3>
    <div class="inner_wrapper"><p>Inhalte Konfigurationen und bearbeiten</p></div>
</div>	
</form>
