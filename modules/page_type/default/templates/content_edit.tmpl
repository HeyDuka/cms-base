<h1>"{{page_title}}": {{writeString=content_module}} {{module_name}} <span style="font-weight:normal;">[{{writeString=container}}: {{container_name}}]</span></h1>
<fieldset id="wysiwyg">
<form enctype="multipart/form-data" method="post" action="{{action}}">
  <input type="hidden" name="timestamp" value="{{timestamp}}" />
  {{writeFlashValue=page_content_changed_since}}
  {{content}}
  <fieldset class="divider condition"><legend class="toggler">{{writeString=object_visibility_condition}}</legend>
    <div style="display: none;">
      <input type="text" name="comparison_1" value="{{comparison_1}}" />
      <select name="comparator" class="autowidth">
        {{comparator_options}}
      </select>
      <input type="text" name="comparison_2" value="{{comparison_2}}" />
    </div>
  </fieldset>
  <input type="hidden" name="module_name" value="{{module_name}}" />

  <label for="save">{{writeString=content_save}}</label>
  <div class="grouped_items">
  <button style="width:16px;float:left;" type="submit" name="save" id="save"></button>
  {{if=;1=\{\{is_new\}\};2=false}}
    {{if=;1=\{\{readonly_history_override\}\};2=true}}
      <input type="hidden" name="create_history" value="1" style="display: none;" />
      <input type="checkbox" id="create_history" value="1" checked="checked" disabled="disabled" />
    {{endIf}}
    {{if=ne;1=\{\{readonly_history_override\}\};2=true}}
      <input type="checkbox" name="create_history" id="create_history" value="1" />
    {{endIf}}
    <label for="create_history">{{writeString=content_save_history}}</label>
  {{endIf}}
  </div>
  
  <label for="content_show">{{writeString=content_show}}</label><button type="button" class="show" id="content_show" onclick="window.location.href='{{show_url}}';"></button>
</form>
</fieldset>
{{identifierContext=start;name=language_object_revisions}}
<fieldset>
  <form enctype="multipart/form-data" method="get" action="{{writeLink=to_self}}">
    <label for="revision">{{writeString=load_from_backup}}</label><select id="language_object_revision_id" name="language_object_revision_id" onchange="$(this).up().submit();">{{language_object_revisions}}</select>
  </form>
</fieldset>
{{identifierContext=end;name=language_object_revisions}}